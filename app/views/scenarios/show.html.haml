%section#hero
  .container-full
    .row
      .col-xs-12
        #district-geometry
          .blue-haze
        .overlay
          = link_to scenarios_path do
            .btn.btn-default
              %i.icon-left-1
              = t '.change_district'
          .district-name.landkreis
            = t('district').upcase
          .district-name
            = @scenario_a.district_name.upcase
          .info
            %h4= "#{t('.population')}: #{@scenario_a.population}"
            %h4= "#{t('.area')} #{@scenario_a.district_area}"

%section#compare-form
  .container.inner-sm
    .row
      .col-xs-12
        = render 'layouts/flash'
      .col-xs-12.text-center
        %h2= t '.compare_scenarios'
      = form_tag '/show/' + params[:district], method: :get do
        .col-sm-5
          = select_tag 'year_a', options_from_collection_for_select(@scenarios, :year, :full_name, params[:year_a]), {class: 'big-select'}
        .col-sm-2.text-center
          %h3= t 'and'
        .col-sm-5
          = select_tag 'year_b', options_from_collection_for_select(@scenarios, :year, :full_name, params[:year_b]), {prompt: t('.choose_scenario'), class: 'big-select'}
        .col-xs-12
          = submit_tag 'Okay', name: nil, class: 'btn btn-default'

%section#pie-charts.light-bg
  .container.inner-sm
    = render 'pie_charts'

%section#line-charts.light-bg
  .container.inner-xs
    = render 'line_charts'

%section#grid-map-section.light-bg
  .container.inner-sm
    = render 'grid_maps'

:javascript
  window.boxplot = #{@scenario_a.boxplot}
  window.dataScenarioA = #{@scenario_a.json_all.to_json}
  window.odRelationsScenarioA = #{@scenario_a.od_relations}

- if @scenario_b
  :javascript
    window.dataScenarioB = #{@scenario_b.json_all.to_json}
    window.odRelationsScenarioB = #{@scenario_b.od_relations}
