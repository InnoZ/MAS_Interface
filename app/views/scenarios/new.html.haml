%section#new
  .container.inner-sm
    .row
      .col-sm-4.col-sm-offset-4
        = render 'layouts/flash'
        = form_for @scenario do |f|
          = f.hidden_field 'district_id', class: 'hidden-district-input'
          %input#district-input.big-input
          = f.select 'year', options_for_select(2017..2040), {}, {class: 'big-select'}
          = f.button class: 'btn btn-default' do
            %i.icon-cog-alt

:javascript
  window.districtsGermanyList = #{raw @districts_germany}
