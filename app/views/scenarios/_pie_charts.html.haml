.row
  .col-xs-12
    %h2
      %i.icon-chart-pie
      = t '.how_are_modes_split'
    %hr
  .col-xs-12
    .chart-legend
      - @scenario_a.available_modes.each do |mode|
        - mode_color = @scenario_a.mode_color(mode)
        .chart-legend-item
          .chart-legend-icon{style: "background: #{mode_color}"}
          = t("mode_names.#{mode}").upcase

- [@scenario_a, @scenario_b].each_with_index do |scenario, index|
  - index == 0 ? ab = 'a' : ab = 'b'
  - if scenario
    .row
      .col-sm-3
        .panel.panel-default
          .panel-heading
            .panel-title{class: ('light-panel-title' if ab == 'b')}
              %i.icon-road
              = t 'modal_split'
              .label.label-info= scenario.year
          .panel-body
            %svg.box-chart{id: 'modal-split-chart-' + ab}
      .col-sm-3
        .panel.panel-default
          .panel-heading
            .panel-title{class: ('light-panel-title' if ab == 'b')}
              %i.icon-chart-bar
              = t 'traffic_performance'
              .label.label-info= scenario.year
          .panel-body
            %svg.box-chart{id: 'traffic-performance-chart-' + ab}
      .col-sm-3
        .panel.panel-default
          .panel-heading
            .panel-title{class: ('light-panel-title' if ab == 'b')}
              %i.icon-leaf-1
              = t 'co2_emissions'
              .label.label-info= scenario.year
          .panel-body
            %svg.box-chart{id: 'carbon-emission-chart-' + ab}

      .col-sm-3
        .panel.panel-default
          .panel-heading
            .panel-title{class: ('light-panel-title' if ab == 'b')}
              %i.icon-leaf-1
              = t 'co2_emissions'
              .label.label-info= scenario.year
          .panel-body
            %svg.bar-chart{id: 'carbon-emission-absolute-chart-' + ab}

.row
  .col-xs-12
    .panel.panel-default
      .panel-heading
        .panel-title
          Modifications
        .panel-body
          .row.modification-slider
            .col-xs-4 Anteil MIV
            #motorized-share-slider.col-xs-8
          .row.modification-slider
            .col-xs-4 CO2-Verbrauch Autos
            #car-carbon-slider.col-xs-8
